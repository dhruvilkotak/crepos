<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.model">

    <class name="Payment" table="payment">
      <id name="paymentId" column="paymentId">
             <generator class="increment"/>
        </id>
        <property name="employeeId" type="integer" column="employeeId"/>
      	 <property name="totalSalary"  column="totalSalary"/>
      	 <property name="salary"  column="salary"/>
      	 <property name="bonus"  column="bonus"/>
      	<property name="paymentDate" type="string" column="paymentDate"/>
      	 
    </class>

</hibernate-mapping>	